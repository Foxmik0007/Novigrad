<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red"
    android:padding="30dp">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="206dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:background="#CF2929"
        android:fontFamily="cursive"
        android:text="Enter the new form"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F4DBDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Documents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Documents"
        android:inputType="textPersonName"
        android:textColor="#FFF3F3"
        android:textColorHighlight="#F3DFDF"
        android:textColorHint="#954949"
        android:textColorLink="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="216dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:background="#CF2929"
        android:fontFamily="cursive"
        android:text="Enter the new Document"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F4DBDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Documents" />

    <EditText
        android:id="@+id/Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Form"
        android:inputType="textPersonName"
        android:textColor="#9E9E9E"
        android:textColorHighlight="#F3DFDF"
        android:textColorHint="#954949"
        android:textColorLink="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />
</androidx.constraintlayout.widget.ConstraintLayout>